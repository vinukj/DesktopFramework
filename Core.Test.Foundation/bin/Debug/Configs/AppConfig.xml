<?xml version="1.0" encoding="UTF-8"?>
<AppConfig>
  <AppSettings>
    <!--Mandatory keys-->
    <!--  Supported browsers =>1. IE 2. FF 3. Chrome 4. Safari -->
    <Data key="BrowserType" value="FF"></Data>
    <!--<Data key="LogsRootPath" value="ProjectPath"></Data>-->
    <Data key="LogsRootPath" value="C:\TestLogs"></Data>
    <!--Option to run the failed test cases again-->
    <Data key="ReRunFailed" value="false"></Data>
    <Data key="EnableLogger" value="true"></Data>
    <!--Set the environments for the runs - Health check, QA etc-->
    <Data key="DesktopEnvironment" value="DesktopQA"></Data>
    <Data key="WebEnvironment" value="WebQA"></Data>
     <Data key="Project" value="Factory"></Data>
    <Data key="PushLogsToSplunk" value="true"></Data>   
    <!--Set any network or local path for splunk server to pick it up-->
    <Data key="SplunkLogLocation" value="C:\RespondSplunk"></Data>
    <!--<Data key="SplunkLogLocation" value="C:\Automation\Logs"></Data>-->
    <Data key="SaveTestRunResults" value="true"></Data>
    <Data key="IeMargin" value = "58"></Data>
    <!--Optional keys-->
    <Data key="Iteration" value="1"></Data>
    <Data key="Debug" value="true"></Data>
    <Data key="EmailId" value="hdxaut"></Data>
    <!--<Data key="DriverPath" value="C:\CSharp\Automation\External"></Data> -->
  </AppSettings>
  <!--Emailing is not implemented-->
  <EmailSettings>
    <!-- Not yet implemented.  -->
    <From></From>
    <Password></Password>
    <To>v</To>
    <Subject>Test Run Report</Subject>
    <SMTPServer></SMTPServer>
    <ResultBy>Module</ResultBy>
    <Enabled>true</Enabled>
    <!-- Supported Type 1. OnlyPassed 2. OnlyFailed 3. All 4. None -->
    <IncludeTest>OnlyFailed</IncludeTest>
  </EmailSettings>
</AppConfig>